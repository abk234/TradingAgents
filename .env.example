# TradingAgents Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (Required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Alpha Vantage API Key (Required for default configuration)
# Get your free key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# Optional: Custom results directory
# TRADINGAGENTS_RESULTS_DIR=./results

# Google Gemini API Key (Optional - for using Gemini models)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Anthropic API Key (Optional - for Claude models)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ========================================
# Email Notifications
# ========================================
# Enable/disable email notifications
EMAIL_ENABLED=false

# Gmail SMTP settings
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# For Gmail: Generate an app password at https://myaccount.google.com/apppasswords
# For other providers: Update SMTP_SERVER and SMTP_PORT accordingly

# ========================================
# Slack/Discord Notifications
# ========================================
# Enable/disable Slack notifications
SLACK_ENABLED=false

# Slack webhook URL
# Create webhook at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional Slack settings
SLACK_CHANNEL=#trading
SLACK_USERNAME=TradingAgents Bot
SLACK_ICON_EMOJI=:robot_face:

# ========================================
# Notification Preferences
# ========================================
# Send notifications on task success
NOTIFY_ON_SUCCESS=true

# Send notifications on task errors
NOTIFY_ON_ERROR=true

# ========================================
# Sector Analysis Settings
# ========================================
# Enable sector-based screening
SECTOR_ANALYSIS_ENABLED=true

# Minimum stocks required per sector for analysis
MIN_STOCKS_PER_SECTOR=5

# Number of top sectors to deep-analyze
TOP_SECTORS_TO_ANALYZE=2

# Number of stocks to analyze from each top sector
STOCKS_PER_SECTOR=3

# ========================================
# Portfolio Settings
# ========================================
# Default portfolio value for position sizing
DEFAULT_PORTFOLIO_VALUE=100000

# Risk tolerance: conservative, moderate, aggressive
RISK_TOLERANCE=moderate

# Maximum position size as percentage of portfolio
MAX_POSITION_SIZE=10

# Minimum cash reserve as percentage
CASH_RESERVE=20

# ========================================
# CLI Formatting
# ========================================
# Color theme for terminal output: monokai, solarized, nord, etc.
RICH_THEME=monokai

# Enable progress bars for long operations
ENABLE_PROGRESS_BARS=true
